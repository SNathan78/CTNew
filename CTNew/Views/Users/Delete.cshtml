@model CTNew.Models.Users

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Users</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        @if (@Model.Gender == "1")
        {
            <dd class = "col-sm-10">
                <span>Female</span>  @* --@Html.DisplayFor(model => model.Gender=="1"?"Female":"Male")) *@
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                <span>Male</span>  @* --@Html.DisplayFor(model => model.Gender=="1"?"Female":"Male")) *@
            </dd>

        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City.CityName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.State.StateName)
        </dd>



    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
